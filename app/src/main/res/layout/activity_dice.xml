<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/horizontalLayout">

            <TextView
                style="@style/diceNo"
                android:text="@string/nod"/>

            <Spinner
               style="@style/dropdown"
                android:id="@+id/diceQty">
            </Spinner>

        </LinearLayout>

        <LinearLayout
            style="@style/horizontalLayoutNoMargin">
            <ImageView
                style="@style/dice"
                android:id="@+id/diceImg"
                android:src="@drawable/dice_one"/>
            <ImageView
                style="@style/dice"
                android:id="@+id/diceImg1"
                android:src="@drawable/dice_one"/>
            <ImageView
                style="@style/dice"
                android:id="@+id/diceImg2"
                android:src="@drawable/dice_one"/>
        </LinearLayout>

        <LinearLayout
            style="@style/horizontalLayoutNoMargin">
            <ImageView
                style="@style/dice"
                android:id="@+id/diceImg3"
                android:src="@drawable/dice_one"/>
            <ImageView
                style="@style/dice"
                android:id="@+id/diceImg4"
                android:src="@drawable/dice_one"/>
            <ImageView
                style="@style/dice"
                android:id="@+id/diceImg5"
                android:src="@drawable/dice_one"/>
        </LinearLayout>

        <Button
            android:id="@+id/roll"
            style="@style/btn"
            android:text="@string/rol" />
    </LinearLayout>

</ScrollView>